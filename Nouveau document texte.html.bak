                                <li>Montage de matériel du sol</li>
                            </ul>
                        </div>
                    </div>
                </section>

                <!-- INTERETS -->
                <section>
                    <div class="top-section-bar"></div>
                    <h2 class="section-title">Centres d'intérêt</h2>
                    <div class="section-sep"></div>
                    
                    <div class="interest-list">
                        <div class="interest-item">
                            <i data-lucide="monitor" class="interest-icon"></i>
                            <span>CCS/HTML (création de mon CV et Folio)</span>
                        </div>
                        <div class="interest-item">
                            <i data-lucide="box" class="interest-icon"></i>
                            <span>Modélisation 3D / Texturing (Utilisation de Logiciel 3D en autodidacte)</span>
                        </div>
                        <div class="interest-item">
                            <i data-lucide="music" class="interest-icon"></i>
                            <span>Musique/Concerts</span>
                        </div>
                    </div>
                </section>
            </div>
            
            <div class="footer-bar"></div>
        </main>
    </div>

    <script>
        lucide.createIcons();
    </script>
</body>
</html>